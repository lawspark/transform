# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java 文件配置
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120

# Gradle 文件配置
[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

# YAML 文件配置
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML 文件配置
[*.xml]
indent_style = space
indent_size = 2

# Properties 文件配置
[*.properties]
indent_style = space
indent_size = 4

# Markdown 文件配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# 其他文本文件配置
[*.{json,html,css,scss,js,ts}]
indent_style = space
indent_size = 2